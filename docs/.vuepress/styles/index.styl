/* For first feature only - replace the SVG with PNG */
.features .feature:first-child svg {
  display: block !important;
  width: 160px;
  height: 160px;
  margin: 0 auto;
  background: url('/img/ecash-icon.png') no-repeat center center !important;
  background-size: contain !important;
}

/* Hide the original SVG content */
.features .feature:first-child svg * {
  display: none !important;
}

/* Additional backup method */
.features .feature:first-child .feature-icon {
  background: url('/img/ecash-icon.png') no-repeat center center;
  background-size: contain;
}

