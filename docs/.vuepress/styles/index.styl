/* Fix for the header logo */
.navbar .logo {
  width: auto !important;
  height: 45px !important;
}

/* Ensure DEV KIT text is visible */
@media (min-width: $MQMobile + 1) {
  .navbar .logo {
    min-width: 125px !important;
  }
}

/* Mobile navigation fixes */
@media (max-width: $MQMobile) {
  .navbar {
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  .navbar .logo {
    height: 35px !important;
  }
  
  .navbar .site-name {
    display: none;
  }
  
  .navbar .links {
    padding-left: 0.5rem;
  }
  
  /* Improve dropdown menu on mobile */
  .nav-dropdown {
    right: 0;
    left: auto !important;
  }
  
  /* Fix mobile menu toggle button */
  .sidebar-button {
    padding: 0.6rem;
  }
}
